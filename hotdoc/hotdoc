"""The main hotdoc application
"""

import cProfile
import os
import sys
import codecs

# pylint: disable=no-name-in-module
from hotdoc.run_hotdoc import run


# https://pythonhosted.org/kitchen/unicode-frustrations.html#frustration-3-inconsistent-treatment-of-output
def _setup_output_streams():
    writer = codecs.getwriter('utf8')
    sys.stdout = writer(sys.stdout)
    sys.stderr = writer(sys.stderr)


def _main():
    run_profile = os.environ.get('HOTDOC_PROFILING', False)
    res = 0

    if run_profile:
        prof = cProfile.Profile()
        res = prof.runcall(run, sys.argv[1:])
        prof.dump_stats('hotdoc-runstats')
    else:
        res = run(sys.argv[1:])

    return res

if __name__ == "__main__":
    _setup_output_streams()
    sys.exit(_main())
